<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MoodleId"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/filsonreg"
        app:layout_constraintBottom_toTopOf="@+id/regmoodleid"
        app:layout_constraintStart_toStartOf="@+id/regmoodleid" />

    <EditText
        android:id="@+id/regmoodleid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:layout_marginTop="@dimen/_50mdp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/baseline_123_24"
        android:drawablePadding="@dimen/_10mdp"
        android:fontFamily="@font/filsonreg"
        android:hint="Enter your moodle id"

        android:inputType="number"
        android:maxLength="8"
        android:paddingHorizontal="@dimen/_10mdp"
        android:paddingVertical="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passwordview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/filsonreg"
        android:text="Old Password"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/regpassword"
        app:layout_constraintStart_toStartOf="@+id/regpassword" />


    <EditText
        android:id="@+id/regpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="@dimen/_10mdp"
        android:fontFamily="@font/filsonreg"
        android:hint="Enter your old password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/_10mdp"
        android:paddingVertical="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regmoodleid" />

    <TextView
        android:id="@+id/newpasswordview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/filsonreg"
        android:text="New Password"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/regrenterpassword"
        app:layout_constraintStart_toStartOf="@+id/regrenterpassword">

    </TextView>

    <EditText
        android:id="@+id/regrenterpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="@dimen/_10mdp"
        android:fontFamily="@font/filsonreg"
        android:hint="Enter your new password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/_10mdp"
        android:paddingVertical="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regpassword" />


    <TextView
        android:elevation="10dp"
        android:id="@+id/registerbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:background="@drawable/buttonbg"
        android:fontFamily="@font/filsonheavy"
        android:gravity="center"
        android:text="First Login"
        android:paddingVertical="@dimen/_10mdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15font_mdp"
        app:layout_constraintTop_toBottomOf="@+id/regrenterpassword" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not New?"
        android:fontFamily="@font/filsonreg"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_20mdp"
        app:layout_constraintEnd_toEndOf="@+id/registerbtn"
        app:layout_constraintStart_toStartOf="@+id/registerbtn"
        app:layout_constraintTop_toBottomOf="@+id/registerbtn" />

    <TextView
        android:id="@+id/tologinbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/red"
        android:fontFamily="@font/filsonreg"
        android:layout_marginTop="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <ImageView
        android:id="@+id/regrepassvisi"
        android:layout_width="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_visibility_24"
        app:layout_constraintBottom_toBottomOf="@+id/regrenterpassword"
        app:layout_constraintEnd_toEndOf="@+id/regrenterpassword"
        app:layout_constraintTop_toTopOf="@+id/regrenterpassword" />

    <ImageView
        android:id="@+id/regpassvisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/baseline_visibility_24"
        app:layout_constraintBottom_toBottomOf="@+id/regpassword"
        app:layout_constraintEnd_toEndOf="@+id/regpassword"
        app:layout_constraintTop_toTopOf="@+id/regpassword" />
</androidx.constraintlayout.widget.ConstraintLayout>
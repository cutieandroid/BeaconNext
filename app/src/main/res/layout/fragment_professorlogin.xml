<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prof.Id"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/filsonreg"
        app:layout_constraintBottom_toTopOf="@+id/loginmoodleid"
        app:layout_constraintStart_toStartOf="@+id/loginmoodleid" />


    <EditText
        android:id="@+id/loginmoodleid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/baseline_alternate_email_24"
        android:drawablePadding="@dimen/_10mdp"
        android:fontFamily="@font/filsonreg"
        android:hint="Enter your EmailId"

        android:inputType="textPersonName"
        android:paddingHorizontal="@dimen/_10mdp"
        android:paddingVertical="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/filsonreg"
        android:text="password"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loginpass"
        app:layout_constraintStart_toStartOf="@+id/loginpass" />

    <EditText
        android:id="@+id/loginpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/baseline_123_24"
        android:drawablePadding="@dimen/_10mdp"
        android:fontFamily="@font/filsonreg"
        android:layout_marginTop="50dp"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/_10mdp"
        android:paddingVertical="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginmoodleid" />

    <TextView
        android:elevation="10dp"
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:background="@drawable/buttonbg"
        android:fontFamily="@font/filsonheavy"
        android:gravity="center"
        android:text="Login"
        android:paddingVertical="@dimen/_10mdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15font_mdp"
        app:layout_constraintTop_toBottomOf="@+id/loginpass" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User ?"
        android:fontFamily="@font/filsonreg"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_20mdp"
        app:layout_constraintEnd_toEndOf="@+id/loginbtn"
        app:layout_constraintStart_toStartOf="@+id/loginbtn"
        app:layout_constraintTop_toBottomOf="@+id/loginbtn" />

    <TextView
        android:id="@+id/toregisterbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Time Login"
        android:textColor="@color/red"
        android:fontFamily="@font/filsonreg"
        android:layout_marginTop="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:id="@+id/regrepassvisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/loginpass"
        app:layout_constraintEnd_toEndOf="@+id/loginpass"
        app:srcCompat="@drawable/baseline_visibility_24" />

</androidx.constraintlayout.widget.ConstraintLayout>